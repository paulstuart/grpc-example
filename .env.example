# gRPC Server Configuration
GRPC_PORT=10000
GRPC_GATEWAY_PORT=11000
GRPC_HOST=localhost

# Authentication
JWT_SECRET=your-secret-key-here
GRPC_ISSUER=grpc-example

# OpenTelemetry Configuration
OTEL_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=localhost:4317
SERVICE_NAME=grpc-example
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=postgresql://grpc_user:grpc_password@localhost:5432/grpc_example?sslmode=disable

# PostgreSQL (for Docker Compose)
POSTGRES_DB=grpc_example
POSTGRES_USER=grpc_user
POSTGRES_PASSWORD=grpc_password
